<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/frgboovermyshelf_frame">
    <RelativeLayout
        android:layout_below="@id/rlAcBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rlSwitch"
        android:visibility="visible"
        android:background="#EAEAAE"
        android:layout_gravity="top|center_horizontal">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnBack"
            android:src="@drawable/ic_back"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="left"
            android:padding="6dp"
            android:background="@null"
            />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/ic_lendo"
            android:src="@drawable/ic_reading_book"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/lendo"
            android:id="@+id/lbllendo" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/ic_lidos"
            android:src="@drawable/ic_book_readed"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/ic_lendo"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_lendo"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/lidos"
            android:id="@+id/lbllidos" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/ic_favorito"
            android:src="@drawable/ic_book_favorite"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_lidos"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_lidos"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/favoritos"
            android:id="@+id/lblfavoritos" />
        <ImageButton
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/ic_tenho"
        android:src="@drawable/ic_add_bookshelf"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:layout_toLeftOf="@id/ic_favorito"
        android:layout_gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="@null"
        />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_favorito"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/quero_ler"
            android:id="@+id/lbltenho" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/ic_para_troca"
            android:src="@drawable/ic_troca"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_tenho"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_tenho"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/para_troca"
            android:id="@+id/lbltroca" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/ic_todos_livros"
            android:src="@drawable/ic_bookshelf_azul"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_para_troca"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_para_troca"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/todos"
            android:id="@+id/lbltodas" />


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/blue_main_light"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/blue_main"
        android:textSize="14dp"
        android:layout_marginBottom="10dp"
        android:text="@string/estante_de"
        android:layout_below="@id/rlSwitch"
        android:id="@+id/lblnomeestante" />
    <ListView
        android:id="@+id/lstViewBooks"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/lblnomeestante"
        />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>