<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_view_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/img_txt_boover_2"
        android:layout_gravity="left"
        android:layout_marginLeft="15dp"
        android:background="#ffffff"
        android:scaleType="centerCrop"
        android:id="@+id/imageViewMeet" />


    <TextView
        android:layout_gravity="left"
        android:textAlignment="center"
        android:id="@+id/textView"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:textSize="11dp"
        android:text="@string/recarregue_pagina"
        android:textColor="@color/blue_main"
        android:layout_below="@+id/imageViewMeet"
        android:layout_toRightOf="@+id/ic_onoff" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_offline"
        android:id="@+id/ic_onoff"
        android:layout_below="@+id/imageViewMeet"
        android:paddingTop="3dp"
        android:scaleType="fitCenter"
        />
</RelativeLayout>