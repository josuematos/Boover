<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="5dp">


    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ic_remove_bookshelf"
        android:src="@drawable/ic_remove_bookshelf"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:visibility="invisible"
        android:background="@null"
        />

    <ImageView
        android:id="@+id/iconBook"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_group" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignTop="@+id/iconBook"
        android:layout_toRightOf="@+id/iconBook"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/iconBook"
        android:id="@+id/ListBook">
        <TextView
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Medium Text"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textColor="#004c98" />
        <TextView
            android:id="@+id/itemauthor"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Medium Text"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:textColor="#004c98" />
        <TextView
            android:id="@+id/itemmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:background="@drawable/rounded_edittext_transparent"
            android:layout_gravity="top"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:scrollbars="vertical"
            android:textColor="#004c98" />

        <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ic_rating_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="@string/classificacao_google"
            android:background="@drawable/rounded_edittext_transparent"
            android:layout_gravity="top"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:scrollbars="vertical"
            android:textColor="#004c98" />

            <TextView
                android:id="@+id/ic_users_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="@string/votos"
                android:background="@drawable/rounded_edittext_transparent"
                android:layout_gravity="top"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:scrollbars="vertical"
                android:textColor="#004c98" />
            <TextView
                android:id="@+id/ic_reviews_amazon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="top"
                android:text="@string/reviews_amazon"
                android:background="@drawable/shape_rounded_amazon"
                android:layout_gravity="top"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:scrollbars="vertical"
                android:textColor="#004c98" />
            <TextView
                android:id="@+id/ic_comprar_amazon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textAlignment="center"
                android:text="@string/comprar_amazon"
                android:background="@drawable/shape_rounded_amazon"
                android:layout_gravity="top"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:scrollbars="vertical"
                android:textColor="#004c98" />
            <TextView
                android:id="@+id/ic_ofertas"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="@string/ofertas"
                android:background="@drawable/shape_rounded_amazon"
                android:layout_gravity="top"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:scrollbars="vertical"
                android:textColor="#004c98" />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ic_rating_boover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="@string/classificacao_boover"
                android:background="@drawable/rounded_edittext_transparent"
                android:layout_gravity="top"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:scrollbars="vertical"
                android:textColor="#004c98" />
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ic_bstar1"
                android:src="@drawable/ic_star_vazado"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@null"
                />
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ic_bstar2"
                android:src="@drawable/ic_star_vazado"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@null"
                />
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ic_bstar3"
                android:src="@drawable/ic_star_vazado"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@null"
                />
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ic_bstar4"
                android:src="@drawable/ic_star_vazado"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@null"
                />
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ic_bstar5"
                android:src="@drawable/ic_star_vazado"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@null"
                />
            <TextView
                android:id="@+id/ic_users_boover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="@string/votos"
                android:background="@drawable/rounded_edittext_transparent"
                android:layout_gravity="top"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:scrollbars="vertical"
                android:textColor="#004c98" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/ListBook"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rlBookTools"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_gravity="top|center_horizontal">
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:id="@+id/ic_book_resenha"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_book_resenha"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@null"
            />
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:id="@+id/ic_ver_resenhas"
            android:src="@drawable/ic_ver_resenha"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_book_resenha"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@null"
            />
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:id="@+id/ic_rating"
            android:src="@drawable/ic_boover_rounded"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_ver_resenhas"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@null"
            />
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:id="@+id/ic_add_bookgroup"
            android:src="@drawable/ic_group_book"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_rating"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@null"
            />
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:id="@+id/ic_quero_ler"
            android:src="@drawable/ic_add_bookshelf_vazado"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_add_bookgroup"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@null"
            />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:id="@+id/ic_book_favorite"
            android:src="@drawable/ic_book_favorite_vazado"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_quero_ler"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@null"
            />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:id="@+id/ic_book_readed"
            android:src="@drawable/ic_book_readed_vazado"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_book_favorite"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@null"
            />
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:id="@+id/ic_reading_book"
            android:src="@drawable/ic_reading_book_vazado"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_book_readed"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@null"
            />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/ic_troca_book"
            android:src="@drawable/ic_market_desmarcado"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_reading_book"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@null"
            />
    </RelativeLayout>
</RelativeLayout>