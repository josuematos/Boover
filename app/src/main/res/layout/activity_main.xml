<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foregroundGravity="center"
    android:background="#004c98"
    android:fitsSystemWindows="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#004c98"
        android:visibility="visible"
        android:id="@+id/rlPrincipal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/rlAcBar"
            android:layout_gravity="top|center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:paddingBottom="5dp">

            <ImageButton
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/ic_boovers"
                                android:src="@drawable/ic_boover_rounded"
                                android:cropToPadding="true"
                                android:layout_gravity="left"
                                android:layout_marginLeft="0dp"
                                android:paddingBottom="4dp"
                                android:paddingTop="4dp"
                                android:scaleType="fitCenter"
                                android:background="@null"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentStart="true"
            />
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:background="@drawable/rounded_edittext_transparent"
                android:textSize="9dp"
                android:text="Boovers"
                android:id="@+id/lblboover" />
            <ImageButton
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:id="@+id/ic_chat"
                                android:src="@drawable/ic_chat"
                                android:cropToPadding="true"
                                android:padding="12dp"
                                android:scaleType="fitCenter"
                                android:background="@null"
                                android:paddingBottom="3dp"
                                android:layout_toRightOf="@+id/ic_boovers"
            />
            <TextView
                android:id="@+id/txtmsgLida"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/ic_boovers"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:text="00"
                android:visibility="invisible"
                android:background="@drawable/rounded_textview_red"
                android:textSize="8sp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/lblboover"
                android:textAlignment="center"
                android:textSize="9dp"
                android:text="@string/chat"
                android:id="@+id/lblchat" />
            <ImageButton
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/ic_bloogers"
                                android:src="@drawable/ic_posts"
                                android:cropToPadding="true"
                                android:scaleType="fitCenter"
                                android:layout_gravity="left"
                                android:padding="12dp"
                                android:background="@null"
                                android:paddingBottom="2dp"
                                android:layout_toRightOf="@+id/ic_chat"
            />
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/lblchat"
                android:textAlignment="center"
                android:textSize="9dp"
                android:text="@string/posts"
                android:id="@+id/lblposts"  />
            <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/ic_bookshelf"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_books"
                    android:cropToPadding="true"
                    android:scaleType="fitXY"
                    android:padding="15dp"
                    android:background="@null"
                    android:paddingBottom="5dp"
                    android:layout_toRightOf="@+id/ic_bloogers"
            />
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/lblposts"
                android:textAlignment="center"
                android:textSize="9dp"
                android:text="@string/livros"
                android:id="@+id/lblbooks"  />
            <ImageButton
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/ic_myboovers"
                                android:layout_gravity="left"
                                android:src="@drawable/ic_contacts"
                                android:cropToPadding="true"
                                android:scaleType="fitCenter"
                                android:padding="10dp"
                                android:paddingBottom="2dp"
                                android:background="@null"
                                android:layout_toRightOf="@+id/ic_bookshelf"
            />
            <TextView
                android:id="@+id/txtpedidoamizade"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_toLeftOf="@+id/ic_user"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="00"
                android:visibility="invisible"
                android:background="@drawable/rounded_textview_red"
                android:textSize="8sp"
                android:textColor="#ffffff" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/lblbooks"
                android:textAlignment="center"
                android:textSize="9dp"
                android:text="@string/amigos"
                android:id="@+id/lblfriends"  />

            <ImageButton
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/ic_user"
                                android:src="@drawable/ic_user"
                                android:cropToPadding="true"
                                android:scaleType="fitCenter"
                                android:layout_gravity="right"
                                android:padding="14dp"
                                android:paddingBottom="4dp"
                                android:background="@null"
                                android:layout_toRightOf="@+id/ic_myboovers"
            />


            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/lblfriends"
                android:textAlignment="center"
                android:textSize="9dp"
                android:text="@string/eu"
                android:id="@+id/lbluser"  />
            <TextView
                android:id="@+id/txtvisCounter"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/ic_myboovers"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:text="00"
                android:visibility="invisible"
                android:background="@drawable/rounded_textview_red"
                android:textSize="8sp"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rlBoover"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rlAcBar">
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v4.view.ViewPager>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>