<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frg_preferences_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rlSwitch"
        android:visibility="visible"
        android:background="#EAEAAE"
        android:layout_gravity="top|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnCancel"
            android:src="@drawable/ic_back"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="left"
            android:padding="6dp"
            android:background="@null"
            />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnSave"
            android:src="@drawable/ic_save"
            android:cropToPadding="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:layout_gravity="right"
            android:padding="12dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/salvar"
            android:id="@+id/lblsalvar" />
    </RelativeLayout>
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rlBody"
    android:layout_below="@id/rlSwitch"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >
    <TextView
        android:text="@string/quem_pode_falar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="#004c98"
        android:id="@+id/txtVerChat"
        android:layout_marginTop="15dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rllinearChat"
            android:layout_below="@id/txtVerChat">
            <ToggleButton
                android:text="@string/todos"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/tglChatTodos"
                android:layout_below="@+id/txtVerChat"
                android:textAllCaps="false"
                android:textColor="#004c98"
                android:textOff="Todos"
                android:textOn="Todos"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:shadowColor="@null" />
            <ToggleButton
                android:text="@string/amigos"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/tglChatAmigos"
                android:layout_below="@+id/txtVerChat"
                android:textAllCaps="false"
                android:textOff="Amigos"
                android:textOn="Amigos"
                android:textColor="#004c98"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:shadowColor="@null" />
        </LinearLayout>
    <TextView
        android:text="@string/quem_pode_fotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:textColor="#004c98"
        android:id="@+id/txtVerFotos"
        android:layout_below="@+id/rllinearChat" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rllinearFotos"
            android:layout_below="@id/txtVerFotos">
            <ToggleButton
                android:text="@string/todos"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/tglFotoTodos"
                android:layout_below="@+id/txtVerFotos"
                android:textAllCaps="false"
                android:textColor="#004c98"
                android:textOff="Todos"
                android:textOn="Todos"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:shadowColor="@null" />
            <ToggleButton
                android:text="@string/amigos"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/tglFotoAmigos"
                android:layout_below="@+id/txtVerFoto"
                android:textAllCaps="false"
                android:textOff="Amigos"
                android:textOn="Amigos"
                android:textColor="#004c98"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:shadowColor="@null" />
        </LinearLayout>
        <TextView
            android:text="@string/quem_pode_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:textColor="#004c98"
            android:id="@+id/txtVerPerfil"
            android:layout_below="@+id/rllinearFotos" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rllinearPerfil"
            android:layout_below="@id/txtVerPerfil">

            <ToggleButton
                android:id="@+id/tglPerfilTodos"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/txtVerPerfil"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:padding="5dp"
                android:shadowColor="@null"
                android:text="@string/todos"
                android:textAllCaps="false"
                android:textColor="#004c98"
                android:textOff="Todos"
                android:textOn="Todos" />

            <ToggleButton
                android:text="@string/amigos"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/tglPerfilAmigos"
                android:layout_below="@+id/txtVerPerfil"
                android:textAllCaps="false"
                android:textOff="Amigos"
                android:textOn="Amigos"
                android:textColor="#004c98"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:shadowColor="@null" />
        </LinearLayout>
    <TextView
            android:text="@string/quem_pode_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:textColor="#004c98"
            android:id="@+id/txtVerPosts"
            android:layout_below="@+id/rllinearPerfil" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rllinearPosts"
            android:layout_below="@id/txtVerPosts">
            <ToggleButton
                android:text="@string/todos"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/tglPostTodos"
                android:layout_below="@+id/txtVerPosts"
                android:textAllCaps="false"
                android:textColor="#004c98"
                android:textOff="Todos"
                android:textOn="Todos"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:shadowColor="@null" />
            <ToggleButton
                android:text="@string/amigos"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/tglPostAmigos"
                android:layout_below="@+id/txtVerPosts"
                android:textAllCaps="false"
                android:textOff="Amigos"
                android:textOn="Amigos"
                android:textColor="#004c98"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:shadowColor="@null" />
        </LinearLayout>
    <TextView
            android:text="@string/quem_pode_videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:textColor="#004c98"
            android:id="@+id/txtVerVideos"
            android:layout_below="@+id/rllinearPosts" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rllinearVideos"
            android:layout_below="@id/txtVerVideos">
            <ToggleButton
                android:text="@string/todos"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/tglVideoTodos"
                android:layout_below="@+id/txtVerVideos"
                android:textAllCaps="false"
                android:textColor="#004c98"
                android:textOff="Todos"
                android:textOn="Todos"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:shadowColor="@null" />
            <ToggleButton
                android:text="@string/amigos"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/tglVideoAmigos"
                android:layout_below="@+id/txtVerVideos"
                android:textAllCaps="false"
                android:textOff="Amigos"
                android:textOn="Amigos"
                android:textColor="#004c98"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:shadowColor="@null" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
