<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/frgmeetboover_frame">


    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridviewmeet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="5dp"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:horizontalSpacing="5dp"
        android:stretchMode="columnWidth"
        android:layout_below="@+id/rlSwitch"
        android:gravity="center"
        />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_below="@id/rlAcBar"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:id="@+id/rlSwitch"
        android:visibility="visible"
        android:background="#EAEAAE"
        android:layout_gravity="top|center_horizontal">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/ic_switch"
            android:src="@drawable/ic_refresh"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="left"
            android:padding="6dp"
            android:background="@null"
            />

    </RelativeLayout>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ic_filter"
        android:src="@drawable/ic_down_arrow"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:padding="12dp"
        android:background="@null"
        />
    <ExpandableListView
        android:id="@+id/elistFilterMeet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlAcBar"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
     />



</RelativeLayout>