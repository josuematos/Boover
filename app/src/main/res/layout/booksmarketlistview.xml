<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:padding="5dp">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ic_remove_bookshelf"
        android:src="@drawable/ic_remove_bookshelf"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:visibility="invisible"
        android:background="@null"
        />

    <ImageView
        android:id="@+id/iconBook"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_group" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignTop="@+id/iconBook"
        android:layout_toRightOf="@+id/iconBook"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/iconBook"
        android:id="@+id/ListBook">
        <TextView
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Medium Text"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textColor="#004c98" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/itemauthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:textColor="#004c98" />

        </LinearLayout>
        <TextView
            android:id="@+id/itemmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:background="@drawable/rounded_edittext_transparent"
            android:layout_gravity="top"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:scrollbars="vertical"
            android:textColor="#004c98" />

        <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ic_rating_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="@string/classificacao_google"
            android:background="@drawable/rounded_edittext_transparent"
            android:layout_gravity="top"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:scrollbars="vertical"
            android:textColor="#004c98" />

            <TextView
                android:id="@+id/ic_users_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="@string/votos"
                android:background="@drawable/rounded_edittext_transparent"
                android:layout_gravity="top"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:scrollbars="vertical"
                android:textColor="#004c98" />
            <TextView
                android:id="@+id/ic_reviews_amazon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="top"
                android:text="@string/reviews_amazon"
                android:background="@drawable/shape_rounded_amazon"
                android:layout_gravity="top"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:scrollbars="vertical"
                android:textColor="#004c98" />

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ic_rating_boover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="@string/classificacao_boover"
                android:background="@drawable/rounded_edittext_transparent"
                android:layout_gravity="top"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:scrollbars="vertical"
                android:textColor="#004c98" />
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ic_bstar1"
                android:src="@drawable/ic_star_vazado"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@null"
                />
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ic_bstar2"
                android:src="@drawable/ic_star_vazado"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@null"
                />
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ic_bstar3"
                android:src="@drawable/ic_star_vazado"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@null"
                />
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ic_bstar4"
                android:src="@drawable/ic_star_vazado"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@null"
                />
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/ic_bstar5"
                android:src="@drawable/ic_star_vazado"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="@null"
                />
            <TextView
                android:id="@+id/ic_users_boover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="@string/votos"
                android:background="@drawable/rounded_edittext_transparent"
                android:layout_gravity="top"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:scrollbars="vertical"
                android:textColor="#004c98" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/ListBook"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/rlBookTools"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="top|center_horizontal">

        <LinearLayout
            android:id="@+id/llprecob"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblmenorprecob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5dp"
                android:text="@string/menor_precob"
                android:textColor="#004c98"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtmenorprecob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5dp"
                android:text="0.00"
                android:textColor="#004c98"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblmaiorprecob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:padding="5dp"
                android:text="@string/maior_precob"
                android:textColor="#004c98"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtmaiorprecob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5dp"
                android:text="0.00"
                android:textColor="#004c98"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
                android:text="@string/ver_ofertas"
                android:background="@drawable/shape_rounded"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="35dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/btnVerOfertas"
                />

    </LinearLayout>

</RelativeLayout>