<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/frgbooks_frame">
    <RelativeLayout
        android:layout_below="@id/rlAcBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rlSwitch"
        android:visibility="visible"
        android:background="#EAEAAE"
        android:layout_gravity="top|center_horizontal">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/ic_switch"
            android:src="@drawable/ic_refresh"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="left"
            android:padding="6dp"
            android:background="@null"
            />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnBack"
            android:src="@drawable/ic_back"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="left"
            android:padding="6dp"
            android:background="@null"
            android:visibility="invisible"
            />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/ic_search_category"
            android:src="@drawable/ic_search_category"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/categoria"
            android:id="@+id/lblacategoria" />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/ic_search_isbn"
            android:src="@drawable/ic_search_isbn"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/ic_search_category"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_search_category"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="ISBN"
            android:id="@+id/lblisbn" />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/ic_search_author"
            android:src="@drawable/ic_search_author"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_search_isbn"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_search_isbn"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/autor"
            android:id="@+id/lblauthor" />
        <ImageButton
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:id="@+id/ic_search_title"
        android:src="@drawable/ic_search_title"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:layout_toLeftOf="@id/ic_search_author"
        android:layout_gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="@null"
        />
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_search_author"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/titulo"
            android:id="@+id/lbltitle" />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/ic_search_publisher"
            android:src="@drawable/ic_search_editora"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_search_title"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_search_title"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/editora"
            android:id="@+id/lbleditora" />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/ic_boovershef"
            android:src="@drawable/ic_bookshelf_azul"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_search_publisher"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_search_publisher"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/estante"
            android:id="@+id/lblestante" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/ic_trocas"
            android:src="@drawable/ic_market"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/ic_boovershef"
            android:layout_gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_boovershef"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/trocas"
            android:id="@+id/lblesttrocas" />

    </RelativeLayout>
    <ListView
        android:id="@+id/lstViewBooks"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/rlSwitch"
        />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>