<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/frgboovermarketfiltros_frame">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rlSwitch"
        android:visibility="visible"
        android:background="#EAEAAE"
        android:layout_gravity="top|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnBack"
            android:src="@drawable/ic_back"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="left"
            android:padding="6dp"
            android:background="@null"
            />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:id="@+id/ic_minha_carteira"
            android:src="@drawable/ic_carteira"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/minha_carteira"
            android:id="@+id/lblminhacarteira" />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:id="@+id/ic_entregue"
            android:src="@drawable/ic_livro_entregue"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/ic_minha_carteira"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_minha_carteira"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/entregues"
            android:id="@+id/lblentregue" />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:id="@+id/ic_enviado"
            android:src="@drawable/ic_livro_enviado"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/ic_entregue"
            android:paddingTop="4dp"
            android:paddingBottom="10dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_entregue"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/enviados"
            android:id="@+id/lblenviados" />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:id="@+id/ic_nao_enviado"
            android:src="@drawable/ic_livro_nao_enviado"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/ic_enviado"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_enviado"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/nao_entregues"
            android:id="@+id/lblnaoenviados" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/blue_main"
        android:textSize="14dp"
        android:layout_marginBottom="10dp"
        android:background="@color/blue_main_light"
        android:text="@string/ofertas"
        android:layout_below="@id/rlSwitch"
        android:id="@+id/lblnomemarket" />
    <ListView
        android:id="@+id/lstViewMarket"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/lblnomemarket"
        />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>