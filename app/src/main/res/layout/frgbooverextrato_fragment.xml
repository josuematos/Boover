<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/frgextrato_frame">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rlSwitch"
        android:visibility="visible"
        android:background="#EAEAAE"
        android:layout_gravity="top|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnBack"
            android:src="@drawable/ic_back"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="left"
            android:padding="6dp"
            android:background="@null"
            />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:id="@+id/ic_recarga"
            android:src="@drawable/ic_recarga"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/status_extrato_recarga"
            android:id="@+id/lblrecarga" />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:id="@+id/ic_creditos"
            android:src="@drawable/ic_pig_bank_credit"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/lblcredito"
            android:layout_alignStart="@+id/lblcredito" />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_recarga"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/status_extrato_credito"
            android:id="@+id/lblcredito" />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:id="@+id/ic_debitos"
            android:src="@drawable/ic_pig_bank_debit"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/ic_creditos"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_creditos"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/status_extrato_debito"
            android:id="@+id/lblcreditos" />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:id="@+id/ic_todos"
            android:src="@drawable/ic_pig_bank"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/ic_debitos"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ic_debitos"
            android:textAlignment="center"
            android:textColor="@color/blue_main"
            android:textSize="8dp"
            android:text="@string/todos"
            android:id="@+id/lbltodos" />

    </RelativeLayout>

    <TextView
        android:id="@+id/lblnomemarket"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/rlSwitch"
        android:background="@color/blue_main_light"
        android:gravity="center"
        android:text="@string/extrato"
        android:textAlignment="center"
        android:textColor="@color/blue_main"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/lblsaldo"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/lblnomemarket"
        android:layout_marginBottom="10dp"
        android:paddingRight="10dp"
        android:background="@color/blue_main_light"
        android:gravity="center"
        android:text="@string/extrato"
        android:textAlignment="textEnd"
        android:textColor="@color/blue_main"
        android:textSize="14dp" />
    <ListView
        android:id="@+id/lstViewMarket"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/lblsaldo"
        />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>